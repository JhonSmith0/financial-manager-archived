// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-openssl-3.0.x"]
}

datasource db {
  // provider = "sqlite"
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id
  email          String           @unique
  name           String
  password       String
  photo          String
  role           String           @default("normal")
  Account        Account[]
  Transaction    Transaction[]
  AccountConfigs AccountConfigs[]
}

model Account {
  id          String @id
  name        String
  description String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  FromTransaction Transaction[] @relation("from")
  ToTransaction   Transaction[] @relation("to")

  @@unique([name, userId])
}

model Transaction {
  id          String   @id
  amount      Float
  description String
  date        DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  fromAccount   Account @relation("from", fields: [fromAccountId], references: [id])
  fromAccountId String

  toAccount   Account @relation("to", fields: [toAccountId], references: [id])
  toAccountId String
}

model AccountConfigs {
  user   User   @relation(fields: [userId], references: [id])
  userId String

  allowTransactionsWhenAccountIsBelowZero Boolean @default(true)

  @@id([userId])
}
